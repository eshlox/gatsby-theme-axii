{
  "packages": ["packages/*"],
  "version": "independent",
  "stream": true,
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "bootstrap": {
      "npmClientArgs": ["--no-package-lock"]
    },
    "version": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "exact": true,
      "createRelease": "github",
      "message": "chore(release): publish"
    }
  }
}
